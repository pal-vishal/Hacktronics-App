<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    /**
    THIS XML FILE CONTAINS CONTACT US LAYOUT PAGE
    **/
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/HowToReachCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/howToReach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:shadowColor="@color/colorBackground"
                    android:text="HOW TO REACH ?"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/howToReach"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="The event is scheduled to be held at the campus of IIT Mandi, Himachal Pradesh.The Instituteâ€™s main campus, called Kamand Campus, is located in the picturesque Uhl river valley at Kamand, which is situated at about 15 kms from the historic town of Mandi in Himachal Pradesh. Mandi is located at a distance of around 475 km from Delhi and around 200 km from Chandigarh on Delhi-Manali route."
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/ContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/HowToReachCard"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/ContactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Contact Us"
                android:textColor="@color/textColor"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ContactContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactUs"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp">

            <android.support.v7.widget.CardView
                android:id="@+id/Contact1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/imagePerson1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/people" />

                    <TextView
                        android:id="@+id/PersonName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imagePerson1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:text="Name 1"
                        android:textColor="@color/textColor"
                        android:textSize="17sp" />

                    <ImageButton
                        android:id="@+id/Phone1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/PersonName1"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:elevation="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_call_black_24dp" />

                    <ImageButton
                        android:id="@+id/mail1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/PersonName1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="5dp"

                        android:background="@color/textColor"
                        android:elevation="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_mail_outline_black_24dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/Contact2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContactContent"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/imagePerson2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/people" />

                <TextView
                    android:id="@+id/PersonName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imagePerson2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="Name 2"
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/Phone2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/PersonName2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/textColor"
                    android:elevation="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_call_black_24dp" />

                <ImageButton
                    android:id="@+id/mail2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/PersonName2"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/textColor"
                    android:elevation="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_mail_outline_black_24dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>